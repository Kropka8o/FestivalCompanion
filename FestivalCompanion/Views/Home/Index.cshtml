@{
	ViewData["Title"] = "Home Page";
}

@section introscherm {
	<article class="waarschuwingscherm">

		<div class="wrapper">
			<figure class="beeldmerk">
				<img src="~/img/bloodhoundbeeldmerkrood.png" alt="Bloodhound Beeldmerk Rood" />
			</figure>

			<section id="waarschuwing">
				Oeps! Deze app is alleen toegankelijk op mobiele apparaten.
			</section>
		</div>
	</article>

	<section id="introscherm">
		<img src="@Url.Content("~/img/bloodhoundlogopaars.png")" alt="Bloodhound Logo Paars" class="logoAnimatie introLogo" />
	</section>
 }

<main id="keuzescherm">
	<video autoplay muted loop id="myVideo">
		<source src="/img/keuzeschermbgVideo.mp4" type="video/mp4">
	</video>

	<div class="wrapper">
		<figure class="grootLogo">
			<img src="img/bloodhoundlogowit.png" alt="Bloodhound Logo Wit" />
		</figure>

		<section class="accountBtns">
			<a class="inlogBtn" asp-area="" asp-controller="Account" asp-action="Login">Inloggen</a>
			<a class="registreerBtn" asp-area="" asp-controller="Account" asp-action="Register">Registeren</a>
		</section>
	</div>
</main>