@{
    ViewData["Title"] = "Map";
}

<div>
    <div id="map" style="height:100vh; width:calc(100vw);"></div>
</div>

@section Scripts {
    <script>
        $(function () {
            // currently the map is centered on Amsterdam
            var map = L.map('map').setView([52.37, 4.90], 13);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(map);

            // if the map is inside a hidden/transition container, call invalidateSize:
            setTimeout(function () { map.invalidateSize(); }, 200);
        });
    </script>
}
