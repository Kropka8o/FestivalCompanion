@model AccountLoginViewModel
@{
    ViewData["Title"] = "Registreer Pagina";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label>Gebruikersnaam: </label>
        @Html.TextBoxFor(m => m.Username, new { placeholder = "Gebruikersnaam" })
    </div>
    <div class="form-group">
        <label>Wachtwoord: </label>
        @Html.PasswordFor(m => m.Password, new { placeholder = "Wachtwoord" })
    </div>
    <div class="form-group">
        <label>Herhaal Wachtwoord: </label>
        @Html.PasswordFor(m => m.Password, new { placeholder = "Herhaal Wachtwoord" })
    </div>
    <div class="form-group">
        <button type="submit">Registreren</button>
    </div>
}