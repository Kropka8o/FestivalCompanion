@model AccountLoginViewModel
@{
    ViewData["Title"] = "Registreer Pagina";
}

<form method="post" asp-action="Register">
    <div class="form-group">
        <label>Gebruikersnaam: </label>    
        <input asp-for="Username" placeholder="Gebruikersnaam" />
    </div>
    <div class="form-group">
        <label>Wachtwoord: </label>
        <input asp-for="Password" type="password" placeholder="Wachtwoord" />
    </div>
    <div class="form-group">
        <label>Herhaal Wachtwoord: </label>
        <input asp-for="Password" type="password" placeholder="Herhaal Wachtwoord" />
    </div>
    <div class="form-group">
        <button type="submit">Registreren</button>
    </div>
</form>